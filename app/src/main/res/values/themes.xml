<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.InclusesApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:fontFamily">@font/fonts_style</item>
    </style>

    <style name="style_primary_button" parent="Widget.Material3.Button">
        <item name="android:paddingLeft">@dimen/spacing_06</item>
        <item name="android:paddingRight">@dimen/spacing_06</item>
        <item name="android:paddingTop">@dimen/spacing_04</item>
        <item name="android:paddingBottom">@dimen/spacing_04</item>
        <item name="android:textSize">@dimen/text_size_button_spacing</item>
        <item name="android:buttonCornerRadius">@dimen/spacing_06</item>
        <item name="backgroundTint">@color/dark_blue</item>
    </style>

    <style name="style_secondary_button" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:paddingLeft">@dimen/spacing_06</item>
        <item name="android:paddingRight">@dimen/spacing_06</item>
        <item name="android:paddingTop">@dimen/spacing_04</item>
        <item name="android:paddingBottom">@dimen/spacing_04</item>
        <item name="android:textSize">@dimen/text_size_button_spacing</item>
        <item name="strokeColor">@color/dark_blue</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="strokeWidth">@dimen/spacing_01</item>
    </style>

    <style name="style_job_box_button" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:paddingLeft">@dimen/spacing_06</item>
        <item name="android:paddingRight">@dimen/spacing_06</item>
        <item name="android:paddingTop">@dimen/spacing_04</item>
        <item name="android:paddingBottom">@dimen/spacing_04</item>
        <item name="android:textSize">@dimen/spacing_04</item>
        <item name="strokeColor">@color/gray</item>
        <item name="android:textColor">@color/gray</item>
        <item name="strokeWidth">@dimen/spacing_01</item>
    </style>

    <style name="style_input" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">@dimen/spacing_06</item>
        <item name="boxCornerRadiusBottomStart">@dimen/spacing_06</item>
        <item name="boxCornerRadiusTopEnd">@dimen/spacing_06</item>
        <item name="boxCornerRadiusTopStart">@dimen/spacing_06</item>
    </style>

    <style name="CustomDatePickerDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorSurface">@color/white</item>
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorOnSurface">@color/light_purple</item>
        <item name="colorAccent">@color/blue</item>
    </style>

    <style name="Theme.InclusesApp" parent="Base.Theme.InclusesApp" />
</resources>